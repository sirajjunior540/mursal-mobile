# Environment Configuration for Driver App - Production
NODE_ENV=production

# Server Configuration (delivery.murrsal.com - Python Delivery Service)
SERVER_IP=delivery.murrsal.com
SERVER_PORT=443
SERVER_PROTOCOL=https

# API Configuration
API_TIMEOUT=15000

# Tenant Configuration
TENANT_ID=sirajjunior
DEFAULT_TENANT_ID=sirajjunior
TENANT_SUBDOMAIN=sirajjunior

# WebSocket Configuration (Go websocket-service via ws.murrsal.com)
WS_SERVICE_HOST=ws.murrsal.com
WS_SERVICE_PORT=443

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_LOCATION_TRACKING=true
ENABLE_OFFLINE_MODE=false

# Debug Configuration (disabled in production)
DEBUG_API_CALLS=false
DEBUG_REALTIME=false
DEBUG_LOCATION=false
DEBUG_PERFORMANCE=false
